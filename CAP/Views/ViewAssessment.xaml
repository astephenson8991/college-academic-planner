<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAP.Views.ViewAssessment"
             Title="Assessment Details">
    
    <VerticalStackLayout>
        <Label 
            x:Name="AssessmentNameLabel" 
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalOptions="Center"
            MinimumWidthRequest="200"
            HorizontalTextAlignment="Center"
            Margin="0,0,0,10"/>
        <Label 
            x:Name="AssessmentTypeLabel"
            Text="Performance Assessment"
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            MinimumWidthRequest="200"
            HorizontalTextAlignment="Center"
            Margin="0,0,0,10"/>

        <Grid 
            Padding="3,8" Margin="0,0,0,10"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label
                Text="Start Date"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Grid.Row="0"
                Grid.Column="0"/>
            <Label 
                Text="End Date"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                Grid.Row="0"
                Grid.Column="1"/>
            <Label
                x:Name="AStart"
                HorizontalOptions="Center"
                Grid.Row="1"
                Grid.Column="0"/>
            <Label 
                x:Name="AEnd"
                HorizontalOptions="Center"
                Grid.Row="1"
                Grid.Column="1"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>