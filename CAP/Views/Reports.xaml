<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAP.Views.Reports"
             Title="Search">
    <VerticalStackLayout>
        <Label 
            Text="Search By Name"
            FontSize="Large"
            HorizontalOptions="Center"
            FontAttributes="Bold"/>
        <SearchBar
            x:Name="SearchBar"
            Placeholder="Search" 
            CancelButtonColor="#FF0000" 
            Margin="0,0,0,20"
            />
        <ImageButton
            x:Name="SearchBtn"
            Source="gobtn.png"
            Clicked="SearchBtn_Clicked" Scale="0.6" Margin="0,0,0,80"/>
    </VerticalStackLayout>
</ContentPage>