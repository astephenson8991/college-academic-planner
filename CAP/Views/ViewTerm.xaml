            FontSize="Medium"
            HorizontalTextAlignment="Center"
            Margin="10,10,10,0">
        </Label>
        <HorizontalStackLayout
            IsVisible="false"
            x:Name="C5Stack"
            HorizontalOptions="Center">
            <Label
                x:Name="C5Start"
                FontSize="Small"
                HorizontalTextAlignment="Center"
                Margin="10">
            </Label>
            <Label 
                Text="-" 
                VerticalOptions="Center">
            </Label>
            <Label
                x:Name="C5End"
                FontSize="Small"
                HorizontalTextAlignment="Center"
                Margin="10">
            </Label>
        </HorizontalStackLayout>
        
